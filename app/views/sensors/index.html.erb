<br/>
<div id="wrapper">
	<div class="container">
		<div id="heart_rate">
			<%= render :partial => "heart_rate" %>
		</div>
	</div>
	<div class="container">
		<div id="geolocation">
			<%= render :partial => "map" %>
		</div>
	</div><br/>
	<div class="container">
		<div id="sweat">
			<%= render :partial => "sweat" %>
		</div>
	</div>
	<div class="container">
		<div id="muscle_tension">
			<%= render :partial => "muscle_tension" %>
		</div>
	</div><br/>
	<div class="container">
		<div id="accelerometer">
			<%= render :partial => "accelerometer" %>
		</div>
	</div>
	<div class="container">
		<div id="gyroscope">
			<%= render :partial => "gyroscope" %>
		</div>
	</div>
	<div class="clearfix"></div>
</div>
<p>
<a id="start" href="#">Start</a>
<a id="stop" href="#">Stop</a>
<br/>
<br/>
