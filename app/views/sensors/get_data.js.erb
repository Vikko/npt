/* clear arrays */

heart_rate_data = [];
sweat_data = [];
muscle_data = [];
accelero_data = [];
gyro_data = [];
peac_data = [];
post_data = [];
resp_data = [];

/* Heart rate */
<% if @hr_data.present? %>
	<% i = 0 %>
	<% @hr_data.each do |data_entry| %>
		if (heart_rate_data.size >= <%= @limit %>){
			heart_rate_data.shift()
		}
		heart_rate_data.push(<%= data_entry%>);
	<% end %>
<% end %>
/* Draw average BPM */
<% if @bpm.present? %>
	current_bpm = <%= @bpm %>;
	current_bpm = current_bpm.toFixed(1);
	$(".bpm-value").html(current_bpm);
<% end %>

/* Sweat */
<% if @sw_data.present? %>
	<% i = 0 %>
	// $("#sweat").html("<%#= j(render :partial => 'sweat') %>");
	<% @sw_data.each do |data_entry| %>
		sweat_data.push([<%= i %>, <%= data_entry%>]);
		<% i += 1 %>
	<% end %>
<% end %>

